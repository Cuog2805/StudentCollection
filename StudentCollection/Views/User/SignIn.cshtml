@{
    ViewBag.Title = "Sign in";
}
@model User

<h2>Sign In</h2>
<form action="~/User/SignIn" method="post">
    <table>
        <tr>
            <td>Username: </td>
            <td>
                <input type="text" name="UserName" value="@Model.UserName" />
            </td>
        </tr>
        <tr>
            <td>Mật khẩu: </td>
            <td>
                <input type="password" name="Password" value="@Model.Password" />
            </td>
        </tr>
        <tr>
            <td>Nhập lại mật khẩu: </td>
            <td>
                <input type="password" name="passwordRepeat" value="" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <p class="text-danger">@ViewBag.signinError</p>
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Sign in" />
            </td>
            <td>
                <a class="btn btn-info" asp-controller="User" asp-action="Login" >Back</a>
            </td>
        </tr>
    </table>
</form>
