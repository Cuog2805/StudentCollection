@{
    ViewBag.Title = "Login";
}
@model User

<h2>Login</h2>
<form action="~/User/Login" method="post">
    <table>
        <tr>
            <td>Username: </td>
            <td>
                <input type="text" name="username" value="@Model.UserName" />
            </td>
        </tr>
        <tr>
            <td>Password: </td>
            <td>
                <input type="password" name="password" value="@Model.Password" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <p class="text-danger">@ViewBag.loginError</p>
            </td>
        </tr>
        <tr>
            <td>
                <input class="btn btn-info" type="submit" value="Login" />
            </td>
            <td>
                <a class="btn btn-dark" asp-controller="User" asp-action="SignIn" >Sign in</a>
            </td>
        </tr>
    </table>
</form>

